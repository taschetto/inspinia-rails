  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <%= render partial: "layouts/float_header", locals: { title: "Editar perfil" } %>
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12 b-r">
            <div class="form-group">
              <div class="form-group">
                 <%= f.label :organization %><br />
                 <%= f.select :organization_id, options_for_select(Organization.all.map {|s| [s.name, s.id]}, @user.organization_id), {}, class:  "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
              </div>

              <% if not user.unconfirmed_email.blank? %>
              <div class="form-group">
                Currently waiting confirmation for: <%= user.unconfirmed_email %>
              </div>
              <% end %>

              <div class="form-group">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, autofocus: true, placeholder: "Nome", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, autofocus: true, placeholder: "Sobrenome", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :location %><br />
                <%= f.text_field :location, autofocus: true, placeholder: "Cidade, Estado", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :about %><br />
                <%= f.text_field :about, autofocus: true, placeholder: "Sobre...", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :profile_picture %><br />
                <%= f.text_field :profile_picture, placeholder: "Caminho para imagem do perfil", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :admin %>
                <%= f.check_box :admin %><br />
              </div>
            </div>              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>