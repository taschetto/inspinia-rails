  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <%= render partial: "layouts/float_header", locals: { title: "Dados do Projeto" } %>
        <div class="ibox-content">
          <div class="form-horizontal m-t-md">
            <div class="form-group">
              <%= f.label :organization, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.select :organization_id, options_for_select(Organization.all.map {|s| [s.name, s.id]}, @project.organization_id), {}, class: "form-control", disabled: "true" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :name, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :description, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :description, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :budget, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :budget, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :block, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.check_box :block %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>