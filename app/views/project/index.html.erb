<% content_for :title, "Projects" %>
<% content_for :actions do %>
  <% link_to "Novo Projeto", new_project_path, class: "btn btn-primary" %>
<% end %>
<% breadcrumb :projects %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Filtro</h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <%= form_tag project_index_path, method: "get", role: "search" do |f| %>
      <div class="form-horizontal m-t-md">
        <div class="form-group">
          <%= label_tag :organization_id, "Organization", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= select_tag :organization_id, options_for_select([["All", "0"]]) + options_for_select(Organization.all.map {|s| [s.name, s.id]}, params[:organization_id]), class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= submit_tag "Filtrar", class: "btn btn-sm btn-primary pull-right m-t-n-xs" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Projetos</h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Organização</th>
          <th>Projeto</th>
          <th>Budget</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |p| %>
          <tr>
            <td><%= p.id %></td>
            <td>
              <strong><%= p.organization.name %></strong><br />
              <small><%= p.organization.full_name %></small>
            </td>
            <td>
              <strong><%= p.title %></strong><br />
              <small><%= p.description %></small>
            </td>
            <td>
              <%= p.budget %><br />
              <small>Bloqueia: <%= p.block %></small>
            </td>
            <td class="project-actions">
              <%= link_to raw("#{fa_icon "folder"} Visualizar"), project_path(p), class: "btn btn-white btn-sm" %>
              <%= link_to raw("#{fa_icon "pencil"} Editar"), edit_project_path(p), class: "btn btn-white btn-sm" %>
              <%= link_to raw("#{fa_icon "close"} Excluir"), project_path(p), method: :delete, class: "btn btn-white btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>