<% content_for :title, "Time Entries" %>
<% content_for :actions do %>
  <% link_to "Novo Lançamento", new_user_time_entry_path(@user), class: "btn btn-primary" %>
<% end %>
<% breadcrumb :time_entries, @user %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Tarefas</h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Projeto</th>
          <th>Período</th>
          <th>Quantidade</th>
          <th>Memo</th>
          <th>Usuário</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @time_entries.each do |te| %>
          <tr>
            <td><%= te.id %></td>
            <td>
              <%= te.task.project.name %><br />
              <small><%= te.task.name %></small>
            </td>
            <td>
              <strong><%= te.starts_at %></strong><br />
              <strong><%= te.ends_at %></strong>
            </td>
            <td>
              <%= te.duration %>
            </td>
            <td>
              <%= te.memo %>
            </td>
            <td>
              <%= te.user.first_name %>
            </td>
            <td class="project-actions">
              <%= actions(te) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>