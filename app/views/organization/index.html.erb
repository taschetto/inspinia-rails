<% content_for :title, "Organizações" %>
<% breadcrumb :organizations %>

<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Lista de Organizações</h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      </a>
    </div>
  </div>
  <div class="ibox-content">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>CNPJ</th>
          <th>Localização</th>
          <th>Outros</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @organizations.each do |org| %>
          <tr>
            <td><%= org.id %></td>
            <td>
              <strong><%= org.name %></strong><br />
              <small><%= org.full_name %></small>
            </td>
            <td><%= org.cnpj %></td>
            <td>
              <%= org.city %><br />
              <small><%= org.state %>, <%= org.country %></small>
            </td>
            <td>
              <%= link_to org.website, org.website %><br />
              <small><%= mail_to org.primary_email, org.primary_email %></small>
            </td>
            <td class="project-actions">
              <%= link_to raw("#{fa_icon "folder"} Visualizar"), organization_path(org), class: "btn btn-white btn-sm" %>
              <%= link_to raw("#{fa_icon "pencil"} Editar"), edit_organization_path(org), class: "btn btn-white btn-sm" %>
              <%= link_to raw("#{fa_icon "close"} Excluir"), organization_path(org), method: :delete, class: "btn btn-white btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>