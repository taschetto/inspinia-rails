<% content_for :title, @organization.name %>
<% breadcrumb :organization, @organization %>

<div class="ibox">
  <div class="ibox-content">
    <div class="row">
      <div class="col-lg-12">
        <div class="m-b-md">
          <%= link_to "Editar", edit_organization_path(@organization), class: "btn btn-white btn-xs pull-right" %>
          <h1><%= @organization.full_name %></h1>
          <% if @organization.is_company? %>
          <span class="btn btn-outline btn-primary dim" type="button"><i class="fa fa-star"></i> Fator 7</span>
          <% end %>
          <% if @organization.is_client? %>
          <span class="btn btn-outline btn-danger dim" type="button"><i class="fa fa-heart"></i> Cliente</span>
          <% end %>
          <% if @organization.is_vendor? %>
          <span class="btn btn-outline btn-success dim" type="button"><i class="fa fa-truck"></i> Fornecedor</span>
          <% end %>
        </div>

        <dl class="dl-horizontal">
          <dt>Nome Fantasia:</dt> <dd><%= @organization.name %></dd>
          <dt>Razão Social:</dt> <dd><%= @organization.full_name %></dd>
          <dt>CNPJ:</dt> <dd><%= @organization.cnpj %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-5">
        <dl class="dl-horizontal">
          <dt>Endereço:</dt> <dd><%= @organization.address1 %></dd>
          <% if @organization.address2 %>
          <dt>&nbsp;</dt> <dd><%= @organization.address2 %></dd>
          <% end %>
          <% if @organization.address3 %>
          <dt>&nbsp;</dt> <dd><%= @organization.address3 %></dd>
          <% end %>
          <dt>CEP:</dt> <dd><%= @organization.zipcode %></dd>
          <dt>Localização:</dt> <dd><%= @organization.city %>, <%= @organization.state %>, <%= @organization.country %></dd>
          <dt>Website:</dt> <dd><%= link_to @organization.website, @organization.website %></dd>
          <dt>E-mail:</dt> <dd><%= link_to @organization.primary_email, @organization.primary_email %></dd>
        </dl>
      </div>
      <div class="col-lg-7">
        <dl class="dl-horizontal" >
          <dt>Atualizada em:</dt> <dd><%= @organization.updated_at %></dd>
          <dt>Criada em:</dt> <dd><%= @organization.created_at %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>