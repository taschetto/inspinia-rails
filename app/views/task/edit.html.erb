<% content_for :title, "Editar #{@task.name}" %>
<% breadcrumb :edit_task, @task %>
<% content_for :actions do %>
<%= link_to "Atualizar Tarefa", "#", class: "btn btn-primary pull-right", onclick: '$(".edit_task").submit()' %>
<% end %>

<%= form_for @task do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <%= render partial: "layouts/float_header", locals: { title: "Dados do Projeto" } %>
        <div class="ibox-content">
          <div class="form-horizontal m-t-md">
            <div class="form-group">
              <%= f.label :name, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :description, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :description, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>