<% content_for :title, "Nova Tarefa" %>
<% breadcrumb :new_task, @project %>
<% content_for :actions do %>
  <%= link_to "Salvar Tarefa", "#", class: "btn btn-primary pull-right", onclick: '$(".new_task").submit()' %>
<% end %>

<%= form_for @task, url: project_task_index_path(@project) do |f| %>
  <%= render partial: "form", locals: { f: f } %>
<% end %>