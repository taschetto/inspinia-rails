<% content_for :title, "Nova Tarefa" %>
<% breadcrumb :new_task %>
<% content_for :actions do %>
  <%= link_to "Salvar Tarefa", "#", class: "btn btn-primary pull-right", onclick: '$(".new_task").submit()' %>
<% end %>

<%= form_for @task, url: task_index_path do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Dados da Tarefa</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <div class="form-horizontal m-t-md">
            <div class="form-group">
              <%= f.label :project_id, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.select :project_id, options_for_select(Project.all.map {|s| [s.name, s.id]}, @task.project_id), {}, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :name, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :description, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.text_field :description, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>