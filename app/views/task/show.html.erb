<% content_for :title, @task.name %>
<% breadcrumb :task, @task %>

<div class="ibox">
  <div class="ibox-content">
    <div class="row">
      <div class="col-lg-12">
        <div class="m-b-md">
          <%= link_to "Editar", edit_task_path(@task), class: "btn btn-white btn-xs pull-right" %>
          <h1><%= @task.name %></h1>
          <h3><%= @task.description %></h3>
        </div>

        <dl class="dl-horizontal">
          <dt>Cliente:</dt>
          <dd>
            <%= @task.project.organization.name %>
            <% if @task.project.organization.is_company? %><i class="fa fa-star"></i><% end %>
            <% if @task.project.organization.is_client? %><i class="fa fa-heart"></i><% end %>
            <% if @task.project.organization.is_vendor? %><i class="fa fa-truck"></i><% end %>
          </dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <dl class="dl-horizontal" >
          <dt>Atualizado em:</dt> <dd><%= @task.updated_at %></dd>
          <dt>Criado em:</dt> <dd><%= @task.created_at %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>