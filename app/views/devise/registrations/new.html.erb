<% content_for :title, "Novo registro" %>

<h3>Registre-se no IN Fator 7.</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "m-t") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-mail" %>
  </div>

  <div class="form-group">
    <%= f.text_field :first_name, autocomplete: "off", class: "form-control", placeholder: "Nome" %>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, autocomplete: "off", class: "form-control", placeholder: "Sobrenome" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmação" %>
  </div>

  <%= f.submit class: "btn btn-primary block full-width m-b" %>
<% end %>