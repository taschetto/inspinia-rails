<% content_for :title, "Editar perfil" %>
<% breadcrumb :edit_registration %>

<%= devise_error_messages! %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Editar perfil</h5>
        <div class="ibox-tools">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
        </div>
      </div>
      <div class="ibox-content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, role: "role" }) do |f| %>
        <div class="row">
          <div class="col-sm-12 b-r">
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="form-group">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </div>
            <% end %>

            <div class="form-group">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, autofocus: true, placeholder: "Nome", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, autofocus: true, placeholder: "Sobrenome", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :location %><br />
              <%= f.text_field :location, autofocus: true, placeholder: "Cidade, Estado", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :about %><br />
              <%= f.text_field :about, autofocus: true, placeholder: "Sobre...", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :profile_picture %><br />
              <%= f.text_field :profile_picture, placeholder: "Caminho para imagem do perfil", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                  <%= f.button "Cancelar", class: "btn btn-white" %>
                  <%= f.submit class: "btn btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
